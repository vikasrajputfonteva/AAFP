<apex:page controller="Fon_SendEmailViaQuickPay" showHeader="false" applyBodyTag="true" applyHtmlTag="true" >
    <style>
        .tr_bottom {
        display: block;
        padding: 7px;
        }
        .tr_bottom_1 {
        display: block;
        padding: 7px;
        }
        .horizontal-gradient{
        border: none;
        color: #444444;
        background: linear-gradient(to right, #ffffff 0%, #ececed 100%);
        margin-top: 0;
        padding: 15px 15px 15px 0px;
        }
        .ho{
        padding: 5px 0 0 0px;
        background: none;
        margin-bottom: 0px;
        margin-left: 0;
        }
        .addBtn1:hover{
        background-color:#8c8c8c;;
        }
        .addBtn{
        font: normal 15px/15px 'Arial', sans-serif;
        border-radius: 6px;
        border: 0 none;
        color: #fff;
        display: inline-block;
        zoom: 1;
        display: inline;
        box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
        -moz-box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
        -webkit-box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        padding: 8px 15px;
        text-decoration: none;
        cursor: pointer;
        }
        .addBtn:hover{
        background-color:#FFC04C;
        }
        .ann:hover {
        color: #7aa0b6;
        text-decoration: underline;
        }
    </style>
    <div style="padding-left:50px;padding-right:50px;padding-bottom:50px;padding-top:50px;">
        <div style="padding: 10px;border-bottom: 4px solid #cf7f00;">
            <img src="https://aafp--fontevad2--c.cs17.content.force.com/servlet/servlet.ImageServer?id=015g0000000wTAA&oid=00Dg0000006VAS1&lastMod=1570434314000" style="width: 175px;" />
        </div>
        <div style="margin-left: 27px;">
            <hgroup class="horizontal-gradient">
                <h1 class="ho" style="font: normal 33px/44px 'Times New Roman', serif;">{!$Label.Fon_QuickPayConfirmation}</h1>
            </hgroup>
            <br/><br/>
            <div style="font-family: 'Arial',sans-serif;font-size:24px;font-weight: bold;">{!$Label.Fon_ThankyouforPayment}</div>
            <br/><br/>
            <div style="font-family: 'Arial',sans-serif;font-size:15px;"> 
                <p style="color: #666666;">{!$Label.Fon_An_email_confirming_payment}&nbsp;<a href= "{!$Label.Fon_url}" style="color:#4f758b;text-decoration: none;">{!$Label.Fon_NonDeductible}</a>&nbsp;{!$Label.Fon_OnOurWebsite}</p>
                <div style="font-size:15px;font-weight: 500;padding-top: 15px;padding-bottom:7px;">{!$Label.Fon_ConfirmationNumber} <b>{!confirmationNumber}</b></div>
                <div style="font-size:15px;font-weight: 500;">{!$Label.Fon_Transaction_Date} 
                    <b>
                        <apex:outputText value="{0, date, MM/dd/yyyy}">
                            <apex:param value="{!NOW()}" /> 
                        </apex:outputText>
                    </b>
                </div>
                <br/>
                <br/>
                <table style="width:100%;">
                    <thead>
                        <tr class="tr_bottom" style="border-bottom: 1px solid #999999;font-weight:bold">
                            <td style="width:200px; ">
                                {!$Label.Fon_Invoice} 
                            </td>
                            <td style="width:400px;">
                                {!$Label.Fon_Owner}  
                            </td>
                            <td style="width:400px;">
                                 {!$Label.Fon_Details}  
                            </td>
                            <td style="width:300px;">
                                 {!$Label.Fon_PaymentAmount}    
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <apex:repeat value="{!receiptLineList}" var="eachSOLine">
                            <tr class="tr_bottom">
                                <td style="width:200px; ">
                                    {!eachSOLine.OrderApi__Sales_Order_Line__r.OrderApi__Sales_Order__r.Name}
                                </td>
                                <td style="width:400px;">
                                    {!eachSOLine.OrderApi__Sales_Order_Line__r.OrderApi__Contact__r.Name}
                                </td>
                                <td style="width:400px;">
                                    {!eachSOLine.OrderApi__Item__r.Name}
                                </td>
                                <td style="width:300px;">
                                    ${!eachSOLine.OrderApi__Total__c}
                                </td>
                            </tr>
                            
                        </apex:repeat>
                        <tr class="tr_bottom_1">
                            <td style="width:200px; "></td>
                            <td style="width:400px;"></td>
                            <td style="width:400px;"></td>
                            <td style="width:300px;">{!$Label.Fon_Total} <b>${!totalAmount}</b></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <p>
                <a href="{!$Label.Fon_PayAnotherInvoiceUrl}" style="text-decoration: none;cursor: pointer;" target="_blank">
                    <input type="button" class="addBtn1" Value="Pay Another Invoice" style="background-color: #444444;border-color: #444444;font: normal 15px/15px 'Arial', sans-serif;border-radius: 6px;border: 0 none;color: #fff;display: inline-block;padding: 8px 15px;"/>
                </a> 
            </p>
            <!--<input type="button" class="addBtn" Value="Print" onclick=" window.print();" style="background-color: #cf7f00;border-color: #cf7f00;" />-->
        </div>  
        <br/>
        <hr/>
        <br/>
        <div style="margin-left: 27px;">
            <div style="font-size:15px;"><a href="https://nf.aafp.org/shop/invoice/payment" target="_blank" style="text-decoration:none;color:#4f758b;">{!$Label.Fon_review}</a></div>
            <br/>            
            <div style="padding-top:10px">{!$Label.Fon_Copyright}  
                <br/> {!$Label.Fon_Address} 
                <br/> {!$Label.Fon_Number} <span style="height: 5px; width: 5px;background-color: #000;border-radius: 50%;display: inline-block;"></span> {!$Label.Fon_Fax} <span style="height: 5px; width: 5px;
                                                                                                                                                                            background-color: #000; border-radius: 50%;display: inline-block;"></span> {!$Label.Fon_Faxno} <span style="height: 5px;width: 5px; background-color: #000;border-radius: 50%; display: inline-block;"></span> {!$Label.Fon_AafpEmail}
            </div>
        </div>
        <div>
            <hr style=" border:1px solid black; " />
        </div>
    </div>
</apex:page>