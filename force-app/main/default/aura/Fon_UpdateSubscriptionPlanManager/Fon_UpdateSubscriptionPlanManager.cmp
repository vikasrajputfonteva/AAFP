<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" 
                access="global" >
	<aura:handler name="init" value="{!this}" action="{!c.doInit}"></aura:handler>
    <aura:attribute name="enableAction" type="Boolean" default="false"/>
    
    <aura:if isTrue="{!v.enableAction}">
        <div class="slds-grid slds-wrap slds-p-around--medium" style="background-color: white;"> 
            <div class="slds-col slds-large-size_2-of-12">
            </div>
            <div class="slds-col slds-large-size_4-of-12" style="padding-right: 10px;">
                <button class="slds-button slds-button_brand slds-float_right custom-button" onclick="{!c.changeSubscriptionPlan}">Change Subscription Plan</button>
            </div>
            <div class="slds-col slds-large-size_4-of-12">
                <button class="slds-button slds-button_brand slds-float_left custom-button" onclick="{!c.updateDonation}">Update Donation</button>
            </div>
            <div class="slds-col slds-large-size_2-of-12">
            </div>
        </div>
    </aura:if> 
</aura:component>