<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="toastwindow" type="Boolean" default="false"/> 
    <aura:attribute name="message" type="String" /> 
    
    <aura:if isTrue="{!v.toastwindow}">
        <div class="slds-notify_container" style="position: none;">
            <div class="xyz slds-notify slds-notify_toast slds-theme_warning" style="text-align:center;" role="status" aura:id="toast-theme">
                <span class="slds-assistive-text">{!$Label.c.Fon_WarningLabel}</span>
                <span class="slds-icon_container slds-icon-utility-warning slds-m-right_small slds-no-flex slds-align-top">
                    <lightning:icon iconName="utility:warning" alternativeText="Warning!" variant="warning" size="small"/>
                </span>
                <div class="slds-align_absolute-center">
                    <h2 class="slds-text-heading_medium " >{!v.message}
                    </h2>
                </div>
                <div class="slds-notify__close">
                    <button class="slds-button slds-button_icon slds-button_icon-inverse" title="Close" onclick="{!c.closebutton}">
                        <lightning:icon iconName="utility:close" alternativeText="close!" variant="close" size="small"/>
                        <span class="slds-assistive-text">Close</span>
                    </button>
                </div>
            </div>
        </div>
    </aura:if> 
</aura:component>